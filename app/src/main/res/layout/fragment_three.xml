<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThreeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totoTitle"
        android:text="마이페이지"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="#aaccdd"
        android:gravity="center_horizontal" />

    <TextView
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="안녕하세요, 로그인을 먼저 진행해주세요"
        android:id="@+id/user"
        />

    <TextView
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나에게 하고 싶은 말"
        android:id="@+id/forMe"
        />



    <TextView
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="팔로잉 목록 보기"
        android:id="@+id/following_list"
        />

    <TextView
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="팔로워 목록 보기"
        android:id="@+id/follower_list"
        />

    <TextView
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정"
        android:id="@+id/setting"
        />

    <TextView
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:id="@+id/login"
        />

</LinearLayout>