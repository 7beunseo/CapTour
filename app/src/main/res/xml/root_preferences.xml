<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="CookBook 설정">

        <EditTextPreference
            app:key="myMemeo"
            app:title="자신에게 하고 싶은 말"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/my_color"
            app:entryValues="@array/my_color_values"
            app:key="color"
            app:title="테마 색상 설정"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            android:key="font_size"
            android:title="글자 크기 설정"
            android:defaultValue="16"
            android:min="10"
            android:max="30"
            app:showSeekBarValue="true"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/my_font"
            app:entryValues="@array/my_font_valuies"
            app:key="font"
            app:title="테마 글꼴 두께 설정"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/sync_header">

        <SwitchPreferenceCompat
            android:key="sync"
            android:title="@string/sync_title" />

        <SwitchPreferenceCompat
            android:dependency="sync"
            android:key="attachment"
            android:summaryOff="@string/attachment_summary_off"
            android:summaryOn="@string/attachment_summary_on"
            android:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>
